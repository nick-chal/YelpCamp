<% include ../partials/header%>

<div class="firstnick">
    <div class="container">
        <div class="row">
            <h1 class="newH1">Add New Comment to <%= campground.name%></h1>
            <div class="inForm">
                <form action="/campgrounds/<%= campground._id %>/comments" method="post">
                    <div class="form-group"><input REQUIRED class="form-control" type="text" placeholder="Author" name ="comment[author]"> </div>
                    <div class="form-group"><input REQUIRED class="form-control" type="text" placeholder="Comment" name="comment[text]"> </div>
                    <div class="form-group"><button class="btn btn-lg btn-primary btn-block">Submit!</button></div>
                </form>
                <a href="/campgrounds/<%= campground._id%>">Back to<%= campground.name%></a>
            </div>
        </div>

    </div>

</div>
<% include ../partials/footer%>